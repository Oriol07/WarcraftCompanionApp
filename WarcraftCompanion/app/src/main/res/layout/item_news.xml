<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/cv_default_radius"
    app:cardElevation="4dp"
    android:layout_margin="15dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >
        <ImageView
            android:id="@+id/ivNewsImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/iv_default"
            android:src="@drawable/wow_shadowlands_logo"
            android:scaleType="centerCrop"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary"
            />
        <TextView
            android:id="@+id/tvNewsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_title_shadowlands"

            android:textSize="@dimen/tv_title"
            android:textStyle="bold"
            android:textColor="@color/colorViewComments"
            android:layout_marginRight="@dimen/tv_default_margin"
            android:layout_marginLeft="@dimen/tv_default_margin"
            android:layout_marginTop="@dimen/tv_default_margin"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorPrimary"
            android:layout_marginTop="@dimen/tv_default_margin"
            />
        <TextView
            android:id="@+id/tvNewsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_text_shadowlands"
            android:textSize="@dimen/tv_description"
            android:textColor="@color/colorViewComments"
            android:layout_marginRight="@dimen/tv_default_margin"
            android:layout_marginLeft="@dimen/tv_default_margin"
            android:layout_marginTop="@dimen/tv_default_margin"
            />
        <TextView
            android:id="@+id/tvNewsDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="10/10/2010"
            android:gravity="right"
            android:textColor="@color/colorViewComments"
            android:textSize="@dimen/tv_description"
            android:layout_marginRight="@dimen/tv_default_margin"
            android:layout_marginLeft="@dimen/tv_default_margin"
            android:layout_marginTop="@dimen/tv_default_margin"
            android:layout_marginBottom="@dimen/tv_default_margin"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>